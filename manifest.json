{
  "manifest_version": 3,
  "name": "Invoice Presenter",
  "version": "1.0.0",
  "description": "View and manage invoice data from Excel files",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Open Invoice Presenter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}

